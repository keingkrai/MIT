# Server
PORT=5050
FRONTEND_ORIGIN=http://localhost:3000

# Gmail SMTP (use App Password, not your normal password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=yourgmail@gmail.com
SMTP_PASS=your_16_char_app_password

# Verification settings
CODE_EXPIRE_MINUTES=10
RESEND_COOLDOWN_SECONDS=60
MAX_VERIFY_ATTEMPTS=5

# Verification token signing (must match backend/.env VERIFICATION_TOKEN_SECRET)
VERIFICATION_TOKEN_SECRET=dev-verify-token-secret
# How long the "verified token" is valid (frontend should immediately exchange it with backend)
VERIFIED_TOKEN_EXPIRE_MINUTES=15


