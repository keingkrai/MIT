# JWT Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (async SQLAlchemy)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/trading_db

# API port (uvicorn)
PORT=8000

# Feature flags for email + verification
EMAIL_SENDING=false
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_EXPIRE_HOURS=24
EMAIL_VERIFICATION_RESEND_COOLDOWN_SECONDS=60

# Resend API (preferred for email)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=onboarding@resend.dev

# SMTP Settings (optional fallback for email_utils.py)
SMTP_USERNAME=
SMTP_PASSWORD=
# IMPORTANT: Use Gmail App Password, NOT your regular Gmail password
# How to get Gmail App Password:
# 1. Go to your Google Account settings (https://myaccount.google.com/)
# 2. Enable 2-Step Verification (if not already enabled)
# 3. Go to App Passwords (under Security section)
# 4. Select "Mail" as the app and "Other" as the device
# 5. Generate a new app password (16 characters)
# 6. Copy and paste that password here (no spaces)
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_16_character_app_password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# (Legacy/unused) Verification token secret
VERIFICATION_TOKEN_SECRET=dev-verify-token-secret

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# API Keys (for TradingAgents)
OPENAI_API_KEY=your_openai_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Typhoon API (for Thai translation) - Get free key from https://playground.opentyphoon.ai/api-key
TYPHOON_API_KEY=your_typhoon_api_key

# Telegram Bot Settings (optional)
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

